      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.1);
      opacity: 0.7;
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }
  .animate-fadeIn {
    animation: fadeIn 1s ease forwards;
  }
  .animate-ripple {
    animation: ripple 0.4s ease;
  }
  .hover\:shadow-glow:hover {
    box-shadow: 0 0 12px 4px rgba(99, 102, 241, 0.7);
  }
